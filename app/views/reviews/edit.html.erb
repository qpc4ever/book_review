<div class="col-md-6 col-md-offset-3">
  <div class="edit-review-form">

    <h1>Edit Review</h1>

    <%= simple_form_for([@book, @review]) do |f| %>
        <div id="rating-form">
        <label>Rating</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit, class: 'btn btn-default fa fa-edit fa-2x', style: 'background-color:black; color:white;' %>
    <% end %>
  </div>
</div>
<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>