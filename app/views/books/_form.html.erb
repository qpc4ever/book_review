<%= simple_form_for @book do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit, class: 'btn btn-default fa fa-edit fa-2x', style: 'background-color:black; color:white;' %>
<% end %>