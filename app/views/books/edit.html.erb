<div class="col-md-6 col-md-offset-3">
  <div class="edit-book-form">
    <h1>Edit Book</h1>

  <%= simple_form_for @book, :html => { :multipart => true } do |f| %>
      <%= f.select :category_id, @categories %>
    <%= f.input :title, label: "Book Title" %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.input :description %>
    <%= f.input :author %>
    <%= f.button :submit, class: 'btn btn-default fa fa-edit fa-2x', style: 'background-color:black; color:white;' %>
  <% end %>
  </div>
</div>